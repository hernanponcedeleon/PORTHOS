  f2 <- flag2;
  while (f2 >= 2) {
    f2 <- flag2
  };
  f2 <- flag2;
  while ((2 <= f2) and (f2 <= 3)) {
    f2 <- flag2
  };
  a <- 0;
  flag1 = a
}
}

